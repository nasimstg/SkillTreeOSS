{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SkillTree",
  "type": "object",
  "required": ["treeId", "title", "category", "difficulty", "description", "version", "nodes", "edges"],
  "properties": {
    "treeId": { "type": "string", "pattern": "^[a-z0-9-]+$" },
    "title": { "type": "string" },
    "category": { "type": "string" },
    "difficulty": { "type": "string", "enum": ["easy", "medium", "hard"] },
    "description": { "type": "string" },
    "version": { "type": "string" },
    "estimatedMonths": { "type": "number" },
    "totalNodes": { "type": "number" },
    "icon": { "type": "string" },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "label", "description", "icon", "zone", "resources", "position", "requires"],
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z0-9-]+$" },
          "label": { "type": "string" },
          "description": { "type": "string" },
          "icon": { "type": "string" },
          "zone": { "type": "string" },
          "resources": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["id", "title", "url", "type", "author", "estimatedHours"],
              "properties": {
                "id": { "type": "string" },
                "title": { "type": "string" },
                "url": { "type": "string", "format": "uri" },
                "type": { "type": "string", "enum": ["video", "article", "interactive", "course", "docs"] },
                "author": { "type": "string" },
                "estimatedHours": { "type": "number" },
                "isFree": { "type": "boolean" },
                "language": { "type": "string" }
              }
            }
          },
          "position": {
            "type": "object",
            "required": ["x", "y"],
            "properties": {
              "x": { "type": "number" },
              "y": { "type": "number" }
            }
          },
          "requires": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "source", "target"],
        "properties": {
          "id": { "type": "string" },
          "source": { "type": "string" },
          "target": { "type": "string" }
        }
      }
    }
  }
}
